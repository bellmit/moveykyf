<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_13"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_drug_name"
            style="@style/text_type1"
            android:text="阿莫西林阿莫西林西林"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/tv_drug_guige"
            style="@style/text_type1"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="10支"/>
        <TextView
            style="@style/text_type1"
            android:text="/"/>
        <TextView
            android:id="@+id/tv_drug_unit"
            style="@style/text_type1"
            android:text="盒" />
        <TextView
            android:id="@+id/tv_drug_number"
            style="@style/text_type1"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="20盒"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10">
        <TextView
            style="@style/text_type3"
            android:text="批发价格 :"
            />
        <TextView
            android:id="@+id/tv_pifa_price"
            style="@style/text_type2"
            android:text="300.00"/>
        <TextView
            style="@style/text_type3"
            android:text="零售价格 :"/>
        <TextView
            android:id="@+id/tv_retail_price"
            style="@style/text_type1"
            android:text="60.00"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            style="@style/text_type3"
            android:text="批号 :"
            />
        <TextView
            android:id="@+id/tv_pihao"
            style="@style/text_type2"
            android:text="54324"/>
        <TextView
            style="@style/text_type3"
            android:text="效期 :"/>
        <TextView
            android:id="@+id/tv_xiaoqi"
            style="@style/text_type1"
            android:text="2019-09-21"/>
    </LinearLayout>
</LinearLayout>
