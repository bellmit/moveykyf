<?xml version="1.0" encoding="utf-8"?>
<com.cyrj.pharmacymessage.custom.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:id="@+id/sml_layout"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_10"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/text_type1"
            android:text="批号:"
            android:textColor="@color/color_333333"
            />
        <TextView
            android:id="@+id/tv_batch_number"
            style="@style/text_type1"
            android:layout_weight="1"
            android:text="789856987"
            android:layout_marginLeft="@dimen/dp_5"/>
        <TextView
            style="@style/text_type1"
            android:text="效期:"
            android:textColor="@color/color_333333"
            />
        <TextView
            android:id="@+id/tv_YP_time"
            style="@style/text_type1"
            android:text="2017-25-10"
            android:layout_marginLeft="@dimen/dp_5"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10">
        <TextView
            android:id="@+id/tv_drug_name"
            style="@style/text_type1"
            android:text="阿莫西林阿莫西林西林"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/tv_drug_guige"
            style="@style/text_type1"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="10支"/>
        <TextView
            style="@style/text_type1"
            android:text="/"/>
        <TextView
            android:id="@+id/tv_drug_unit"
            style="@style/text_type1"
            android:text="盒" />
        <TextView
            android:id="@+id/tv_drug_number"
            style="@style/text_type1"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="20盒"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/my_lives_revise"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/darkorange"
        android:textColor="#ffffff"
        android:text="修改"
        android:gravity="center"
        android:layout_toRightOf="@+id/rl_right"
        />
    <TextView
        android:id="@+id/my_lives_delete"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/text_red"
        android:textColor="#ffffff"
        android:text="删除"
        android:gravity="center"
        android:layout_toRightOf="@+id/rl_right"
        />
</com.cyrj.pharmacymessage.custom.SwipeMenuLayout>
