<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:spinner="http://schemas.android.com/apk/res-auto">
  <RelativeLayout
      android:id="@+id/rl_title_bar"
      android:background="@color/main_color"
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp_42"
      >
    <LinearLayout
        android:id="@+id/ll_lift_back"
        android:layout_width="@dimen/dp_45"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/dp_15"
        >
      <ImageView

          android:layout_marginRight="27px"
          android:layout_gravity="center"
          android:src="@mipmap/white_back"
          android:scaleType="fitXY"
          android:layout_width="@dimen/dp_10"
          android:layout_height="@dimen/dp_18" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_lift_menu"
        android:layout_width="@dimen/dp_45"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/dp_15"
        android:visibility="gone"
        >
      <ImageView

          android:layout_marginRight="27px"
          android:layout_gravity="center"
          android:src="@mipmap/order_fore"
          android:scaleType="fitXY"
          android:layout_width="@dimen/dp_20"
          android:layout_height="@dimen/dp_20" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:gravity="center">
      <TextView
          android:id="@+id/tv_title"
          android:textSize="@dimen/sp_16"
          android:textColor="@color/white"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:maxLines="1" />
      <LinearLayout
          android:id="@+id/ll_select_yklb"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginLeft="@dimen/dp_3"
          android:gravity="center"
          android:visibility="gone"
         >

        <com.cyrj.pharmacymessage.custom.spinner.MaterialSpinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            spinner:ms_arrow_tint="@color/white"
            spinner:ms_popupwindow_height="wrap_content"
            spinner:ms_popupwindow_maxheight="200dp" />
        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_5"
            android:src="@mipmap/xiangxia"
            android:visibility="gone"
            />

      </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_alignParentRight="true"
        android:id="@+id/ll_right_img"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
      <ImageView
          android:layout_centerVertical="true"
          android:id="@+id/iv_right_img"
          android:layout_marginLeft="@dimen/dp_25"
          android:layout_marginRight="@dimen/dp_21"
          android:layout_gravity="center_vertical"
          android:layout_width="40px"
          android:layout_height="40px" />
      <TextView
          android:visibility="gone"
          android:id="@+id/tv_unRead"
          android:textColor="@color/white"
          android:layout_marginTop="12px"
          android:layout_marginLeft="50px"
          android:text="3"
          android:textSize="@dimen/sp_18"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_right_text"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:padding="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_5"
        android:visibility="gone"
        >
      <TextView
          android:id="@+id/tv_right_text"
          android:textSize="@dimen/sp_13"
          android:textColor="@color/white"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          />


    </LinearLayout>
  </RelativeLayout>

</layout>

